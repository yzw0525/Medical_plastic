/* pages/share/share.wxss */
.share{margin-top: 20rpx;padding: 10rpx 3%;}
.share_title{font-size: 30rpx;color: #333;line-height: 60rpx;}
.share_content{min-height: 600rpx; padding: 10rpx 0;position: relative;}
.share_content textarea{width: 100%;padding-right: 110rpx;box-sizing: border-box;font-size: 28rpx;}
.logo{width: 100rpx;height: 100rpx;position: absolute;right: 0;top: 10rpx;border: solid 1px #eeeeee;border-radius: 10rpx;background-image: url(http://hfyx.yzw0525.com/images/icon/yestar.png);background-size: 95%;background-position: center;background-repeat: no-repeat;}

.share_btn{width: 66.6%;height: 110rpx;line-height: 110rpx; margin: 30rpx auto;color: #fff;background-color: #937343;}
button.share_btn::before {
content:" ";
display:inline-block;
width:45rpx;
height:45rpx;
vertical-align:middle;
background:transparent url(http://hfyx.yzw0525.com/images/icon/share_icon.svg) no-repeat;
background-size:100%;
}