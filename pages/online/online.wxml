<!--online.wxml-->
<view class="container">
  <image src="{{imgpath}}online_banner.jpg"  mode='widthFix'></image>
  <form bindsubmit="MyfromSubmit" report-submit="true">
  <view class="Myfrom clear">
    <view class="form-text">
      <label>您的姓名：</label>
      <input type="text" placeholder="仅用于预约使用" name="patients" value='{{postData.patients}}' maxlength="32" placeholder-class="input-placeholder" class="from-input" />
    </view>
    <view class="form-text">
      <label>您的电话：</label>
      <input type="text" placeholder="仅用于预约使用" name="tel" maxlength="32" value='{{postData.tel}}' placeholder-class="input-placeholder" class="from-input" />
    </view>
    <view class="form-text">
      <label>预约项目：</label>
      <picker mode="selector" bindchange="bindProjectTypeChange" name="typename" value="{{projectTypeList[projectTypeIndex].typename}}" range="{{projectTypeList}}" range-key="typename" class="from-input" data-typeid="{{projectTypeList[projectTypeIndex].id}}">
          <view class="dateoption">
            {{projectTypeList[projectTypeIndex].typename}}
          </view>
        </picker>
    </view>
    <view class="form-text">
      <label>预约专家：</label>
      <picker mode="selector" bindchange="bindDoctorChange" name="yydoctor" value="{{doctlist[doctindex].doctorName}}" range="{{doctlist}}" range-key="doctorName" class="from-input" >
          <view class="dateoption">
            {{doctlist[doctindex].doctorName}}
          </view>
        </picker>
    </view>
    <view class="form-text">
      <label>预约日期：</label>
      <picker mode="date" value="{{datetimes}}" start="{{today}}" name="yydate"  bindchange="bindDateChange" class="from-input" >
        <view class="dateoption">
          {{datetimes}}
        </view>
      </picker>
    </view>
  </view>
  <view class="form-textarea">
      <textarea maxlength="200" name="content" value='{{postData.content}}' placeholder-class="input-placeholder" placeholder="（非必填）可简单描述您的需求" />
  </view>
  <view class="form-submit">
      <button size="default" loading="{{loading}}" class="online-submit" form-type="submit">加密提交</button>
  </view>
  </form>
</view>
